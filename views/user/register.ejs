<!DOCTYPE html>
<html>
  <head>
    <title>User Registration Form</title>
  </head>
  <body>
    <h2>User Registration</h2>
    <% if (typeof errorMessage !== "undefined") { %>
    <p role="alert"><%= errorMessage %></p>
    <% } %><% if (typeof error !== "undefined") { %>
    <span style="color: red; font: size 14px" id="Err"> <%= error %></span>
    <% } %> <% if (typeof successMessage !== "undefined") { %>
    <p role="alert"><%= successMessage %></p>
    <% } %>
    <form action="/register" method="post">
      <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" />
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof errors.name!="undefined") ?
          errors.name.msg: ""%>
        </p>
      </div>
      <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" />
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof errors.email!="undefined") ?
          errors.email.msg: ""%>
        </p>
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof
          errors.password!="undefined") ? errors.password.msg: ""%>
        </p>
      </div>
      <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" />
        <p style="color: red">
          <%= (typeof errors!="undefined" && typeof
          errors.confirmPassword!="undefined") ? errors.confirmPassword.msg:
          ""%>
        </p>
      </div>
      <div>
        <input type="submit" value="Register" />
      </div>
    </form>
  </body>
</html>
