  <script>
  document.addEventListener("DOMContentLoaded", function () {
  const itemsPerPage = 5; // Number of entries to display per page
  let currentPage = 1; // Current page, starting from 1

  function showPage(pageNumber) {
    const rows = document.querySelectorAll(".cust-datatable tbody tr");
    const totalPages = Math.ceil(rows.length / itemsPerPage);

    // Hide all rows
    rows.forEach((row) => (row.style.display = "none"));

    // Show rows for the current page
    const startIndex = (pageNumber - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;
    for (let i = startIndex; i < endIndex && i < rows.length; i++) {
      rows[i].style.display = "table-row";
    }
  }

  // Function to generate the pagination links dynamically
  function generatePaginationLinks() {
    const paginationElement = document.getElementById("pagination");
    const rows = document.querySelectorAll(".cust-datatable tbody tr");
    const totalPages = Math.ceil(rows.length / itemsPerPage);

    let paginationHTML = "";

    if (currentPage > 1) {
      paginationHTML += `<li class="page-item"><a href="#" class="page-link" onclick="changePage(${currentPage - 1})">Previous</a></li>`;
    } else {
      paginationHTML += `<li class="page-item disabled"><a href="#">Previous</a></li>`;
    }

    for (let i = 1; i <= totalPages; i++) {
      if (i === currentPage) {
        paginationHTML += `<li class="page-item active"><a href="#" class="page-link" onclick="changePage(${i})">${i}</a></li>`;
      } else {
        paginationHTML += `<li class="page-item"><a href="#" class="page-link" onclick="changePage(${i})">${i}</a></li>`;
      }
    }

    if (currentPage < totalPages) {
      paginationHTML += `<li class="page-item"><a href="#" class="page-link" onclick="changePage(${currentPage + 1})">Next</a></li>`;
    } else {
      paginationHTML += `<li class="page-item disabled"><a href="#">Next</a></li>`;
    }

    paginationElement.innerHTML = paginationHTML;
  }

  // Function to change the current page and update the pagination links
  function changePage(newPage) {
    if (newPage >= 1 && newPage <= Math.ceil(rows.length / itemsPerPage)) {
      currentPage = newPage;
      showPage(currentPage);
      generatePaginationLinks();
    }
  }

  // Call the initial functions to show the first page and generate the pagination links
  showPage(currentPage);
  generatePaginationLinks();
});

