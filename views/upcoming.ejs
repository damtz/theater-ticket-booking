<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper@10/swiper-bundle.min.css" />

    <link rel="stylesheet" href="css/upcoming.css" />
  </head>
  <body>
    <%- include('header') %>

    <!-- ====================================New Release================================ -->
    <div class="newrelease">
      <div class="container">
        <h4 class="text-white p-4">Up Comming</h4>
      </div>

      <!-- ===============================movie list========================================== -->

      <div class="container movie-list">
        <div class="row d-flex">
          <div class="col-md-12">
            <div class="image-container d-flex justify-content-between">
              <div class="col-md-3">
                <a href="upcomingdetails">
                  <img src="./img/chasing.jpg" alt="Image 1" class="p-3" />
                </a>
              </div>

              <div class="col-md-3">
                <img src="./img/chohay.jpg" alt="Image 2" class="p-3" />
              </div>
              <div class="col-md-3">
                <img src="./img/3.jpg" alt="Image 3" class="p-3" />
              </div>
              <div class="col-md-3">
                <img src="./img/hunchen.jpg" alt="Image 4" class="p-3" />
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="image-container">
              <div class="col-md-3">
                <img src="./img/hinglayra.jpg" alt="Image 5" class="p-3" />
              </div>
              <div class="col-md-3">
                <img src="./img/14.jpg" alt="Image 6" class="p-3" />
              </div>
              <div class="col-md-3">
                <img src="./img/7.jpg" alt="Image 7" class="p-3" />
              </div>
              <div class="col-md-3">
                <img src="./img/8.jpg" alt="Image 8" class="p-3" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="load-more d-flex justify-content-center">
        <button type="button" class="btn btn-secondary mt-4">LOAD MORE</button>
      </div>
    </div>

    <%- include('footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
      crossorigin="anonymous"></script>

    <script src="https://unpkg.com/swiper@10/swiper-bundle.min.js"></script>
    <script>
      const swiper = new Swiper(".swiper", {
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },
        loop: true,
      });
    </script>
  </body>
</html>
