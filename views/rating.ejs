    <%- include('header1') %>
    <!-- =============================================Image Slider========================================= -->

    <div class="container">
      <div class="row">
        <div class="col-6 col-md-4 right-div">
          <img src="./img/7.jpg" alt="Movie Image" />
          <div class="container movie-name px-5">
            <p class="text-white mt-4"><b>Meto Pema</b></p>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Title</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">Meto Pema</p>
              </div>
            </div>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Duration</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">2hrs 3mins</p>
              </div>
            </div>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Genre</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">Drama</p>
              </div>
            </div>
          </div>
        </div>

          <div class="col leftdiv d-flex justify-content-end">
          <div class="movie-summary">
            <div class="container p-5">
              <h3 class="text-white mb-4">Rate This Movie</h3>
              <div>
                <i class="fa-sharp fa-regular fa-star" style="color: #ffe36d; height: 40px;"></i>            
                <i class="fa-sharp fa-regular fa-star" style="color: #ffe36d;  height: 40px;"></i>            
                <i class="fa-sharp fa-regular fa-star" style="color: #ffe36d;  height: 40px;"></i>            
                <i class="fa-sharp fa-regular fa-star" style="color: #ffe36d;  height: 40px;"></i>            
                <i class="fa-sharp fa-regular fa-star" style="color: #ffe36d;  height: 40px;"></i>   
                
              </div>


              <div class="Feedback mb-5">
                <h3 class="text-white mt-4">Your Feedback</h3>
                <div class="form-group" >
                    <!-- <label for="exampleFormControlTextarea1">Example textarea</label> -->
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                  </div>
              </div>
            </div>

            <div class="container">
            <div class="ticket-button d-flex justify-content-end px-5">
              <button type="button" class="btn btn-outline-warning" onclick="openPopup()">
                SUBMIT
              </button>
              <div class="popup" id="popup">
                <p>Are you sure want to submit?</p>

                <div class="row">
                  <div class="col-md-6">
                    <button type="button" onclick="closePopup()">CANCEL</button>	
                   </div>
                   <div class="col-md-6">
                     <button type="button" onclick="openPopup()">SUBMIT</button>	
                   </div>
                </div>
                
              </div>
              
            </div>
          </div>
          </div>
      </div>
    </div>
    <script>
      let popup = document.getElementById("popup");
  
      function openPopup(){
        popup.classList.add("open-popup");
      }
  
  
      function closePopup(){
        popup.classList.remove("open-popup");
      }
    </script>
  
