  <body>
   <%- include('header1') %>
    <!-- =============================================Image Slider========================================= -->

    <div class="container">
      <div class="row">
        <div class="col-6 col-md-4 right-div">
          <img src="./img/7.jpg" alt="Movie Image" />
          <div class="container movie-name px-5">
            <p class="text-white mt-4"><b>Meto Pema</b></p>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <i class="fa-sharp fa-solid fa-star" style="color: #ffe36d"></i>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Title</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">Meto Pema</p>
              </div>
            </div>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Duration</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">2hrs 3mins</p>
              </div>
            </div>
            <div class="row category">
              <div class="col">
                <p class="text text-white">Genre</p>
              </div>
              <div class="col">
                <p class="text text-white fw-light">Drama</p>
              </div>
            </div>
          </div>
        </div>

          <div class="col leftdiv d-flex justify-content-end">
          <div class="movie-summary">
            <div class="container p-5">
              <h4 class="text-white mb-4">Booking Summary</h4>

              <div class="container inner-div">
                <h6 class="text-white">
                  <span class="movie-title">Movie Title:</span>
                  Meto Pema
                </h6>

                <h6 class="text-white mt-3">
                  <span class="movie-title">Location:</span>
                  City Cinema, Chubachu
                </h6>

                <h6 class="text-white mt-3">
                  <span class="movie-title">Date:</span>
                  07-07-2023
                </h6>
                <h6 class="text-white mt-3">
                  <span class="movie-title">Time:</span>
                  06:30 PM
                </h6>

                <h6 class="text-white mt-3">
                  <span class="movie-title">Seat(s):</span>
                  4
                </h6>

              </div>

              <div>
                <h4 class="text-white mt-4">Seat and Paymant Summary</h4>
                <div class="container">
                  <h6 class="text-white mt-3">
                    <span class="movie-title">Room Name:</span>
                    Normal
                  </h6>
                  <h6 class="text-white mt-3">
                    <span class="movie-title">Seat Number:</span>
                    VP1, NR1, VP2, NR2
                  </h6>
                  <h6 class="text-white mt-3">
                    <span class="movie-title">Ticket Price:</span>
                    Nu 350
                  </h6>
                  <hr class="line">
                  <h6 class="text-white">
                    <span class="movie-title">Total Price:</span>
                    Nu 1400
                  </h6>

                </div>
              </div>
            </div>

            <div class="container">
            <div class="ticket-button d-flex justify-content-end px-5">
              <button type="button" class="btn btn-outline-warning">
                Download
              </button>
            </div>
          </div>
          </div>
      </div>
    </div>

    <%- include('footer') %>
