  </head>
  <body>
    <!-- ==============================Login=================== -->
    <div class="wrapper d-flex justify-content-center">
      <div class="card">
        <form action="#" class="d-flex flex-column">
          <div class="d-flex justify-content-center mt-3">
            <img src="./img/lockicon.png"style="height: 90px; width: 70px;">
          </div>
          
          <div class="h3 text-center login mb-5">Reset Your Password</div>
          <div class="d-flex align-items-center input-field mb-3">
            <span class="fas fa-lock p-2" style="color: #ffe36d"></span>
            <input
              type="text"
              placeholder="New password"
              required
              class="form-control " />
          </div>

          <div class="d-flex justify-content-center">
            <button class="btn btn-lg btn-primary m-4">RESET Password</button>
          </div>
        </form>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
      integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
