<%- include('header') %>
<link href="/admin/css/style.css" rel="stylesheet" type="text/css" />
          <section class="table__header">
            <h2>Hall Mapping</h2>
          </section>
          <section class="table__body">
            <form action="/mappingUpdateAdmin/<%= mapping.id %>" method="POST" class="hall-form">
              <label for="movieId">Movie:</label>
              <select id="movieId" name="movieId" required>
                <option value="<%= mapping.movie_id %>">Select a Movie</option>
                <% movies.forEach(function(movie) { %>
                <option value="<%= movie.id %>"><%= movie.title %></option>
                <% }) %></select
              ><br />

              <label for="screeningDates" style="margin-top: 10px;">Date(<%= mapping.screening_date %>)</label>
              <select
                id="screeningDates"
                name="screeningDates"              >
                <% for (let i = 0; i < 7; i++) { %> <% const currentDate = new
                Date(); %> <% currentDate.setDate(currentDate.getDate() + i); %>
                <% const formattedDate =
                currentDate.toISOString().split('T')[0]; %>
                <option value="<%= formattedDate %>">
                  <%= formattedDate %>
                </option>
                <% } %></select
              ><br />

              <label for="screeningTime" style="margin-top: 10px;">Time(<%= mapping.screening_time %>)</label>
              <input
                type="time"
                id="screeningTime"
                name="screeningTime"
                value="<%= mapping.screening_time %>"
                required
              /><br />

              <button type="submit" style="color: #828282; margin-top: 15px">Update Mapping</button>
            </form>
          </section>
        </main>
      </section>
    </div>
  </body>
</html>
