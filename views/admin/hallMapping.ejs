<%- include('header') %>

          <section class="table__header">
            <h1>Hall Mapping</h1>
          </section>
          <section class="table__body">
            <div class="pr-4 pl-4" style="padding-bottom: 100px">
              <div class="table-scroll-container">
                <table id="myTable" class="table table-striped">
                  <thead>
                    <tr>
                      <th>SI No <span class="icon-arrow">&UpArrow;</span></th>
                      <th>Movie Name</th>
                      <th>Hall Name</th>
                      <th>Screening Date</th>
                      <th>Screening Time</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let slNo = 1; %>
                    <!-- Initialize the slNo variable outside the loop -->
                    <% mappings.forEach(function(mapping) { %>
                    <tr id="rowId1" >
                      <td style="padding: 20px 10px;"><%= slNo %></td>
                      <td><%= mapping.movie_name %></td>
                      <td><%= mapping.hall_name %></td>
                      <td><%= mapping.screening_date %></td>
                      <td><%= mapping.screening_time %></td>
                      <td>
                        <a href="/mappingUpdateAdmin/<%= mapping.id %>">
                          <i class="fa fa-edit"></i
                        ></a>
                        <a href="/mappingDeleteAdmin/<%= mapping.id %>">
                          <i class="fa fa-trash delete-icon"></i
                        ></a>
                      </td>
                    </tr>
                    <% slNo++; %>
                    <!-- Increment the slNo for the next iteration -->
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <div class="add-user-button-container">
                <a href="/adminCreateMapping"
                  ><button class="add-user-button">Add New Mapping</button></a
                >
              </div>
            </div>
          </section>
        </main>
      </section>
    </div>
    <%- include('alert') %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function () {
        $('#myTable').DataTable({
          // Enable filtering
          searching: true,
          // Enable sorting
          ordering: true,
          // Enable pagination
          paging: true,
        });
      });
    </script>
  </body>
</html>
