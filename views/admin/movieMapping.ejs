<!DOCTYPE html>
<html>
  <head>
    <title>Movie Hall Mapping Form</title>
  </head>
  <body>
    <h2>Movie Hall Mapping Form</h2>
    <form action="/movie-hall-mapping" method="POST">
      <label for="movieId">Movie:</label>
      <select id="movieId" name="movieId" required>
        <option value="">Select a Movie</option>
        <% movies.forEach(function(movie) { %>
        <option value="<%= movie.id %>"><%= movie.title %></option>
        <% }) %></select
      ><br />
      <label for="movieHallId">Movie Hall:</label>
      <select id="movieHallId" name="movieHallId" required>
        <option value="">Select a Movie Hall</option>
        <% movieHalls.forEach(function(movieHall) { %>
        <option value="<%= movieHall.id %>"><%= movieHall.name %></option>
        <% }) %></select
      ><br />
      <label for="screeningDate">Screening Date:</label>
      <input
        type="date"
        id="screeningDate"
        name="screeningDate"
        required
      /><br />
      <label for="screeningTime">Screening Time:</label>
      <input
        type="time"
        id="screeningTime"
        name="screeningTime"
        required
      /><br />
      <input type="submit" value="Submit" />
    </form>
  </body>
</html>
