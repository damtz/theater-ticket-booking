<!DOCTYPE html>
<html>
  <head>
    <title>Movie Hall Mapping Form</title>
  </head>
  <body>
    <h2>Movie Hall Mapping Form</h2>
    <form action="/movie-mapping" method="POST">
      <label for="movieId">Movie:</label>
      <select id="movieId" name="movieId" required>
        <option value="">Select a Movie</option>
        <% movies.forEach(function(movie) { %>
        <option value="<%= movie.id %>"><%= movie.title %></option>
        <% }) %></select
      ><br />

      <label for="screeningDates">Screening Dates:</label>
      <select id="screeningDates" name="screeningDates" multiple required>
        <% for (let i = 0; i < 7; i++) { %> <% const currentDate = new Date();
        %> <% currentDate.setDate(currentDate.getDate() + i); %> <% const
        formattedDate = currentDate.toISOString().split('T')[0]; %>
        <option value="<%= formattedDate %>"><%= formattedDate %></option>
        <% } %></select
      ><br />

      <label for="screeningTime">Screening Time:</label>
      <input
        type="time"
        id="screeningTime"
        name="screeningTime"
        required
      /><br />

      <input type="submit" value="Submit" />
    </form>
  </body>
</html>
