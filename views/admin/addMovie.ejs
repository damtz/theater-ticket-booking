<%- include('header') %>
          <section class="table__header">
            <h3>Movie Administration</h3>
          </section>
          <section class="table__body">
            <form
              action="/admin-addMovie"
              method="POST"
              class="hall-form"
              enctype="multipart/form-data"
            >
              <div class="input-row">
                <div>
                  <label for="name">Name:</label>
                  <input type="text" id="name" name="movieTitle" required/>
                </div>
                <div>
                  <label for="casts">Casts:</label>
                  <input type="text" id="name" name="casts" required/>
                </div>
              </div>
              <div class="input-row">
                <div>
                  <label for="genre">Genre:</label>
                  <select name="genre" id="genre" required>
                    <option selected>Select Genre:</option>
                    <option value="comedy">Comedy</option>
                    <option value="action">Action</option>
                    <option value="romance">Romance</option>
                  </select>
                </div>
                <div>
                  <label for="status">Status:</label>
                  <select name="status" id="status" required>
                    <option selected>Select Status:</option>
                    <option value="New Release">New Release</option>
                    <option value="UpComing">UpComing</option>
                    <option value="Closed">Closed</option>
                  </select>
                </div>
              </div>
              <div class="input-row">
                <div>
                  <label for="duration">Duration:</label>
                  <input type="text" id="name" name="duration" required/>
                </div>

                <div>
                  <label for="image">Movie Image:</label>
                  <input type="file" id="image" name="image" accept="image/*" required/>
                </div>
              </div>

              <label for="summary">Summary:</label>
              <textarea id="summary" name="summary" required></textarea>

              <button type="submit" style="color: #828282; margin-top: 20px">
                Add Now
              </button>
            </form>
          </section>
        </main>
      </section>
    </div>
    <%- include('alert') %>
  </body>
</html>
