<%- include('header') %>
<link href="/admin/css/style.css" rel="stylesheet" type="text/css" />
          <section class="table__header">
            <h2>Hall Mapping</h2>
          </section>
          <section class="table__body">
            <form action="/adminCreateMapping" method="POST" class="hall-form">
              <label for="movieId">Movie:</label>
              <select id="movieId" name="movieId" required>
                <option value="">Select a Movie</option>
                <% movies.forEach(function(movie) { %>
                <option value="<%= movie.id %>"><%= movie.title %></option>
                <% }) %></select
              ><br />

              <label for="screeningDates">Screening Dates:</label>
              <select
                id="screeningDates"
                name="screeningDates"
                multiple
                required
              >
                <% for (let i = 0; i < 7; i++) { %> <% const currentDate = new
                Date(); %> <% currentDate.setDate(currentDate.getDate() + i); %>
                <% const formattedDate =
                currentDate.toISOString().split('T')[0]; %>
                <option value="<%= formattedDate %>">
                  <%= formattedDate %>
                </option>
                <% } %></select
              ><br />

              <label for="screeningTime">Screening Time:</label>
              <input
                type="time"
                id="screeningTime"
                name="screeningTime"
                required
              /><br />

              <button type="submit" style="color: #7b7b7b;  margin-top: 20px">Create Mapping</button>
            </form>
          </section>
        </main>
      </section>
    </div>
    <%- include('alert') %>
  </body>
</html>
