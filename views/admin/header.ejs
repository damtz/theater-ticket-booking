              /* Set the container height for vertical centering */
            }
      
            /* Style the "Welcome Super-admin" text */
            .centered-container h5 {
              margin: 0;
              font-size: 18px;
              font-weight: bold;
            }
      
      
            /* Responsive styles using media queries */
            @media screen and (max-width: 768px) {
              .header {
                /* Adjust the padding and font size for smaller screens */
                padding: 5px;
              }
              
              .centered-container {
                /* Remove height to allow content to adjust vertically */
                height: auto;
              }
              
              .centered-container h5 {
                /* Adjust the font size for smaller screens */
                font-size: 14px;
              }
            }
    </style>
