    <style>
        /* User management panel styles */
        
        .user-management {
            position: fixed;
            top: 0;
            right: -250px;
            width: 250px;
            height: 100%;
            background-color: #f4f4f4;
            padding: 20px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            transition: right 0.3s ease-in-out;
        }
        
        .user-management.open {
            right: 0;
        }
        
        .user-management .close-btn {
            text-align: right;
        }
        
        .user-management ul {
            list-style: none;
            padding: 0;
            margin: 30px 0;
        }
        
        .user-management li {
            padding: 10px 0;
            border-bottom: 1px solid #ccc;
        }
        
        .user-management li:last-child {
            border-bottom: none;
        }
        
        .user-management a {
            text-decoration: none;
            color: #333;
        }
        
        .user-management a:hover {
            color: #555;
        }
        
        .user-management h2 {
            margin-bottom: 20px;
        }
        
        .table .action-buttons {
            display: flex;
            justify-content: center;
            margin-left: 200px;
        }
        
        .table button[type="submit"] {
            align-items: center;
