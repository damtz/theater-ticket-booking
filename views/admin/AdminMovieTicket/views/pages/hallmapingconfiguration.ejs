        <div class="popup-container" id="popupContainer">
            <div class="popup-content">
                <h2>HALL MAPPING</h2>
                <span class="cancel-icon" onclick="closePopup()">&times;</span>
                <!--  -->
                <!--  -->

                <form id="editForm" action="#">
                    <div>
                        <input type="hidden" id="editIndex" name="editIndex" value="" />

                        <div class="input-group">
                            <label for="moviename">Movie Name:</label>
                            <input type="text" id="moviename" name="moviename" required />
                        </div>
                    </div>

                    <div>
                        <div class="input-group">
                            <label for="hallname">Hall Name:</label>
                            <select id="hallname" name="hallname" required>
                  <option value="" selected disabled>Select Hall Name</option>
                  <option value="citycinema">City Cinema</option>
                  <option value="action">Towa Theater</option>
                  <option value="comedy">Lugar Theater</option>
                </select>
                        </div>
                    </div>

                    <div>
                        <input type="hidden" id="editIndex" name="editIndex" value="" />

                        <div class="input-group">
                            <label for="screeningdate">Screening Date:</label>
                            <input type="date" id="screeningdate" name="screeningdate" required onchange="validateDate()" />
                        </div>
                    </div>

                    <div>
                        <input type="hidden" id="editIndex" name="editIndex" value="" />

                        <div class="input-group">
                            <label for="screeningtime">Screening Time:</label>
                            <input type="time" id="screeningtime" name="screeningtime" required />
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button type="submit">HALL MAPPING</button>
                    </div>
                </form>

                <!-- <div class="action-buttons">
            <button type="submit">HALL MAPPING</button>
          </div> -->
            </div>
        </div>
        <!-- for the right user side -->
        <div class="user-management" id="userManagement">
            <div class="close-btn">
                <i class="fas fa-times" onclick="toggleUserManagementPanel()"></i>
            </div>
            <h2>Username</h2>
            <ul>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Settings</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
        </div>
