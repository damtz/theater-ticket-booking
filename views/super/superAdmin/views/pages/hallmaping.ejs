    <script>
        // Add JavaScript to handle sidebar item clicks
        document.addEventListener("DOMContentLoaded", function() {
            const sidebarItems = document.querySelectorAll(".side-bar ul li");

            sidebarItems.forEach((item) => {
                item.addEventListener("click", function() {
                    // Reset all items to default color
                    sidebarItems.forEach((item) => {
                        item.style.backgroundColor = "#3a3a3a";
                        item.querySelector("a").style.color = "#eee";
                        item.querySelector("i").style.color = "#eee";
                    });

                    // Change color of clicked item
                    this.style.backgroundColor = "#FFE36D";
                    this.querySelector("a").style.color = "#FFE36D";
                    this.querySelector("i").style.color = "#FFE36D";
                });
            });
        });
    </script>
